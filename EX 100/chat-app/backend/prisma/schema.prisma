datasource db {
  provider = "sqlite"
  url      = "file:../../data/app.db"
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id        Int      @id @default(autoincrement())
  role      String
  content   String
  createdAt DateTime @default(now())
  username  String?  @default("Anonyme") // Pour savoir qui a Ã©crit
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
}
